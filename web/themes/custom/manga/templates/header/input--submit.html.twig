{#
/**
 * @file
 * Default theme implementation for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}

{% if path('<current>') starts with '/home-page' or path('<current>') starts with '/read' or path('<current>') starts with '/search' %}
  <button class="search-btn" {{ attributes.removeAttribute('value') }}>
    <i class="fa fa-search text-orange"></i>
  </buton>
{% else %}
  <input class="bg-orange rounded border-0 p-2 text-white" {{attributes}}/>{{ children }}
{% endif %}
